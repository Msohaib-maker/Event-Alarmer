<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Battery Shape -->
    <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <size android:width="100dp" android:height="30dp"/>
            <solid android:color="@color/grey_400"/>
        </shape>
    </item>

    <!-- Inner Battery Shape (Filled based on progress) -->
    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="5dp"/>
                <size android:width="80dp" android:height="20dp"/>
                <solid android:color="#BF439EC3"/>
            </shape>
        </clip>
    </item>

</layer-list>